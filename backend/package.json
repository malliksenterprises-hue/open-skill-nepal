    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    
    // ============ PHASE 2: VIDEO SYSTEM ============
    "multer": "^1.4.5-lts.1",
    "@google-cloud/storage": "^6.9.5",
