# ========================================
# Open Skill Nepal - Phase 2 Configuration
# ========================================

# Application Configuration
NODE_ENV=production
PORT=8080
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://openskill_user:openskill_password@mongodb:27017/open-skill-nepal?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=password
MONGO_PORT=27017

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# GCP Configuration
GCP_SERVICE_ACCOUNT_KEY_BASE64=your_base64_encoded_service_account_key_here
GCS_BUCKET_NAME=open-skill-nepal-videos
GCS_PROJECT_ID=open-skill-nepal-478611
MAX_VIDEO_SIZE=500MB

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=https://openskillnepal.com,https://www.openskillnepal.com,http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=no-reply@openskillnepal.com

# Frontend URLs
FRONTEND_URL=https://openskillnepal.com
ADMIN_URL=https://admin.openskillnepal.com

# Feature Flags
ENABLE_VIDEO_UPLOAD=true
ENABLE_LIVE_CLASSES=true
ENABLE_STUDENT_VERIFICATION=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
